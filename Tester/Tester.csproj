<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>

		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<InterceptorsPreviewNamespaces>$(InterceptorsPreviewNamespaces);Tester;Tester.Features.Generated</InterceptorsPreviewNamespaces>

		<!--Be able to browse generated files-->
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Using Include="Nemesis.Demos" />
		<Using Include="Spectre.Console" />
		<Using Include="System.Buffers" />
		<Using Include="System.Diagnostics" />
		<Using Include="System.Globalization" />
		<Using Include="System.Numerics" />
		<Using Include="System.Reflection" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Nemesis.Demos\Nemesis.Demos.csproj" />
	</ItemGroup>

</Project>
